<%= simple_form_for(@vehicle_location) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :location_id %>

    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :bearing %>
    <%= f.input :engine_hours %>

    <%= f.input :fuel %>
    <%= f.input :odometer %>
    <%= f.input :speed %>
    <%= f.input :location_description %>


  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
